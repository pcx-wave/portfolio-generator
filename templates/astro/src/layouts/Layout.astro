---
// Astro Portfolio Template - Main Layout
interface Props {
  title: string;
  portfolio: any;
}

const { title, portfolio } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title} | Portfolio</title>
    <link rel="stylesheet" href="/styles/main.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <header>
        <div class="container">
            <img class="profile-photo" src={portfolio.photo_url} alt={`Photo de ${portfolio.name}`}>
            <h1>{portfolio.name}</h1>
            <p class="headline">{portfolio.headline}</p>
            <p id="user-bio">{portfolio.bio}</p>
            <p class="contact-line">{portfolio.contact_line}</p>
            <p class="address-line">{portfolio.address_line}</p>
        </div>
    </header>
    
    <section class="resume-section">
        <div class="container">
            <h2>Profils</h2>
            <ul class="profiles-list">
                {portfolio.profiles?.length ? (
                    portfolio.profiles.map((profile: any) => (
                        <li>
                            <strong>{profile.network}</strong> : 
                            <a href={profile.url}>{profile.url}</a>
                        </li>
                    ))
                ) : (
                    <li>Non renseigné</li>
                )}
            </ul>
        </div>
    </section>
    
    <section class="resume-section">
        <div class="container">
            <h2>Compétences</h2>
            <div class="skills-list">
                {portfolio.skills?.length ? (
                    portfolio.skills.map((skill: string) => (
                        <span class="skill-tag">{skill}</span>
                    ))
                ) : (
                    <span>Aucune</span>
                )}
            </div>
        </div>
    </section>
    
    <section class="resume-section">
        <div class="container">
            <h2>Formation</h2>
            <div class="education-list">
                {portfolio.education?.length ? (
                    portfolio.education.map((edu: any) => (
                        <div class="education-item">
                            <h3>{edu.institution}</h3>
                            <p>{edu.title}</p>
                            <p>{edu.period}</p>
                            {edu.score && <p>{edu.score}</p>}
                        </div>
                    ))
                ) : (
                    <div class="education-item">
                        <h3>Formation non renseignée</h3>
                    </div>
                )}
            </div>
        </div>
    </section>
    
    <section id="projects" class="realisations">
        <div class="container">
            <h2>{portfolio.section_title || 'Réalisations'}</h2>
            <div class="project-grid" id="projects-container">
                {portfolio.projects?.map((project: any) => (
                    <div class="project-card">
                        <img 
                            src={project.image || 'https://via.placeholder.com/400x250/0077b6/FFFFFF?text=Project'} 
                            alt={project.title}
                            onerror="this.src='https://via.placeholder.com/400x250/0077b6/FFFFFF?text=Project'"
                        />
                        <h3>{project.title}</h3>
                        <p>{project.description}</p>
                    </div>
                ))}
            </div>
        </div>
    </section>
    
    <footer>
        <div class="container">
            <p>&copy; 2026 {portfolio.name}. Tous droits réservés.</p>
        </div>
    </footer>
</body>
</html>
